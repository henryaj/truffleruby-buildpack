#!/usr/bin/env bash

set -euo pipefail

# TruffleRuby runtime environment setup
export TRUFFLERUBY_HOME="${TRUFFLERUBY_HOME:-/tmp/truffleruby}"
export PATH="${TRUFFLERUBY_HOME}/bin:$PATH"

# rbenv setup
export RBENV_ROOT="/app/.rbenv"
export PATH="${RBENV_ROOT}/bin:$PATH"
export PATH="${RBENV_ROOT}/shims:$PATH"

# Initialize rbenv if available
if command -v rbenv &>/dev/null; then
    eval "$(rbenv init -)"
fi
